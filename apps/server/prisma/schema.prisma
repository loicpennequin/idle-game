generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id        String    @id @unique @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  text      String
  completed Boolean
}

model User {
  id           String    @id @unique @default(cuid())
  email        String
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
}
