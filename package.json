{
  "name": "root",
  "private": true,
  "scripts": {
    "dev:server": "yarn workspace @daria/server dev",
    "dev:client": "yarn workspace @daria/client dev",
    "dev": "turbo run dev",
    "build:server": "yarn workspace @daria/server build",
    "build:client": "yarn workspace @daria/client build",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:sync": "yarn workspace @daria/server db:sync",
    "db:ui": "yarn workspace @daria/server db:ui"
  },
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*"
    ]
  },
  "dependencies": {
    "turbo": "^1.7.0"
  }
}
