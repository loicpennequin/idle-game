{
  "name": "root",
  "private": true,
  "scripts": {
    "client": "yarn workspace @daria/client",
    "server": "yarn workspace @daria/server",
    "dev": "turbo run dev",
    "db:start": "yarn serber db:start",
    "db:stop": "yarn server db:stop",
    "db:sync": "yarn server db:sync",
    "db:ui": "yarn server db:ui",
    "build": "yarn client build && yarn server build && shx cp -r ./apps/client/dist ./apps/server/public/",
    "start": "yarn server start"
  },
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*"
    ]
  },
  "dependencies": {
    "shx": "^0.3.4",
    "turbo": "^1.7.0"
  }
}
